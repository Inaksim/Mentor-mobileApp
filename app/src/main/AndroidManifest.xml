<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Mentor.BackgroundImageStyle"
        tools:targetApi="31">

        <activity
            android:name=".activity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Mentor.BackgroundImageStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.HomePageActivity"
            android:exported="false"
            android:theme="@style/Theme.Mentor.BackgroundImageStyle"
            />
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Mentor.BackgroundImageStyle"
            />

        <activity
            android:name=".activity.RegisterNameActivity"
            android:exported="false"
            android:theme="@style/Theme.Mentor.BackgroundImageStyle"
            />
        <activity
            android:name=".activity.RegisterEmailActivity"
            android:exported="false"
            android:theme="@style/Theme.Mentor.BackgroundImageStyle"
            />
        <activity
            android:name=".activity.RegisterPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Mentor.BackgroundImageStyle"
            />
        <activity
            android:name=".activity.NewPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.Mentor.BackgroundImageStyle"
            />
        <activity
            android:name=".activity.SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.Mentor.BackgroundImageStyle"
            />
        <activity
            android:name=".activity.CategoryActivity"
            android:exported="false"
            android:theme="@style/Theme.Mentor.BackgroundImageStyle"
            />
        <activity
            android:name=".activity.PlaceDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Mentor.BackgroundImageStyle"
            android:screenOrientation="sensor"
            />


    </application>

</manifest>